<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
		<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
		</h1>
		</section>
	</aside>
	<div class="span8">
		<% if signed_in? and current_user != @user %>
				<%= render 'follow_form' %>
		<% end %>
		<% if @user.blogs.any? %>
			<h3>Blogs (<%= @user.blogs.count %>)</h3>
			<ol class="blogs" %>
				<%= render @blogs %>
			</ol>
			<%= will_paginate @blogs %>
		<% end %>
	</div>
</div>
